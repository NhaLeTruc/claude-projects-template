{
  "name": "claude-projects-template",
  "version": "1.0.0",
  "description": "Production-ready Git repository boilerplate template optimized for Claude Code assisted development",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",

    "lint": "eslint -c .config/typescript/eslint.config.js src --ext .ts",
    "lint:fix": "eslint -c .config/typescript/eslint.config.js src --ext .ts --fix",
    "lint:python": "pylint --rcfile=.config/python/pylintrc **/*.py",
    "lint:java": "mvn -f .config/java/pom.xml checkstyle:check",

    "format": "prettier --config .config/typescript/prettier.config.json --write \"src/**/*.ts\"",
    "format:check": "prettier --config .config/typescript/prettier.config.json --check \"src/**/*.ts\"",
    "format:python": "black . && isort .",
    "format:python:check": "black --check . && isort --check-only .",
    "format:java": "java -jar google-java-format.jar --replace $(find . -name '*.java')",

    "test": "jest --config .config/typescript/jest.config.js",
    "test:coverage": "jest --config .config/typescript/jest.config.js --coverage",
    "test:python": "pytest",
    "test:coverage:python": "pytest --cov --cov-fail-under=80",
    "test:java": "mvn -f .config/java/pom.xml test",
    "test:coverage:java": "mvn -f .config/java/pom.xml verify",

    "typecheck:python": "mypy . --config-file .config/python/pyproject.toml",

    "check:complexity:python": "radon cc . -a -nc --exclude 'venv/*,.venv/*,tests/*' --total-average",

    "check:deps": "madge --config .config/typescript/madge.config.json --circular --ts-config .config/typescript/tsconfig.json --extensions ts src/",
    "check:deps:python": "node scripts/hooks/check-circular-python.js",
    "check:deps:python:full": "deptry . --config .config/python/pyproject.toml",
    "check:deps:python:graph": "pydeps --cluster --max-bacon 10 -o dependency-graph-python.svg src/",
    "check:deps:java": "mvn -f .config/java/pom.xml test -Dtest=ArchitectureTest",

    "check:secrets": "gitleaks detect --config .config/security/gitleaks.toml --source . --verbose",
    "check:secrets:deep": "bash scripts/security/scan-history.sh",
    "check:file-size": "node scripts/hooks/check-file-size.js",
    "check:docs": "node scripts/hooks/check-documentation.js",
    "check:languages": "node scripts/hooks/detect-languages.js",

    "check:all": "npm run check:languages && npm run lint && npm run format:check && npm run test && npm run check:deps && npm run check:file-size && npm run check:docs && npm run check:secrets",
    "check:all:python": "npm run lint:python && npm run typecheck:python && npm run check:complexity:python && npm run format:python:check && npm run test:coverage:python && npm run check:deps:python:full",
    "check:all:java": "npm run lint:java && npm run test:coverage:java && npm run check:deps:java",

    "build": "tsc -p .config/typescript/tsconfig.json",
    "build:python": "python setup.py build",
    "build:java": "mvn -f .config/java/pom.xml compile"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "commitizen": "^4.3.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/cz-commitlint": "^18.0.0",
    "gitleaks": "^8.18.0",
    "madge": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "eslint-import-resolver-typescript": "^3.6.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "eslintConfig": {
    "extends": "./.config/typescript/eslint.config.js"
  },
  "prettier": "./.config/typescript/prettier.config.json",
  "jest": "./.config/typescript/jest.config.js",
  "keywords": [
    "template",
    "boilerplate",
    "git-hooks",
    "quality-gates",
    "claude-code",
    "typescript",
    "python",
    "java"
  ],
  "author": "Claude Code Template",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/claude-projects-template.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
