{
  "name": "claude-projects-template",
  "version": "1.0.0",
  "description": "Production-ready Git repository boilerplate template optimized for Claude Code assisted development",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "lint": "eslint -c .config/typescript/eslint.config.js src --ext .ts",
    "lint:fix": "eslint -c .config/typescript/eslint.config.js src --ext .ts --fix",
    "lint:python": "pylint --rcfile=.config/python/pylintrc **/*.py",
    "lint:java": "java -jar checkstyle.jar -c .config/java/checkstyle.xml src/",
    "format": "prettier --config .config/typescript/prettier.config.json --write \"src/**/*.ts\"",
    "format:check": "prettier --config .config/typescript/prettier.config.json --check \"src/**/*.ts\"",
    "format:python": "black -c .config/python/pyproject.toml .",
    "format:java": "java -jar google-java-format.jar --replace $(find . -name '*.java')",
    "test": "jest --config .config/typescript/jest.config.js",
    "test:coverage": "jest --config .config/typescript/jest.config.js --coverage",
    "test:python": "pytest --cov",
    "test:java": "mvn test",
    "check:deps": "madge --config .config/typescript/madge.config.json --circular --ts-config .config/typescript/tsconfig.json --extensions ts src/",
    "check:secrets": "gitleaks detect --config .config/security/gitleaks.toml --source . --verbose",
    "check:secrets:deep": "bash scripts/security/scan-history.sh",
    "check:file-size": "node scripts/hooks/check-file-size.js",
    "check:docs": "node scripts/hooks/check-documentation.js",
    "check:languages": "node scripts/hooks/detect-languages.js",
    "check:all": "npm run check:languages && npm run lint && npm run format:check && npm run test && npm run check:deps && npm run check:file-size && npm run check:docs && npm run check:secrets",
    "build": "tsc -p .config/typescript/tsconfig.json",
    "build:python": "python setup.py build",
    "build:java": "mvn compile"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "commitizen": "^4.3.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/cz-commitlint": "^18.0.0",
    "gitleaks": "^8.18.0",
    "madge": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "eslint-import-resolver-typescript": "^3.6.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "eslintConfig": {
    "extends": "./.config/typescript/eslint.config.js"
  },
  "prettier": "./.config/typescript/prettier.config.json",
  "jest": "./.config/typescript/jest.config.js",
  "keywords": [
    "template",
    "boilerplate",
    "git-hooks",
    "quality-gates",
    "claude-code",
    "typescript",
    "python",
    "java"
  ],
  "author": "Claude Code Template",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/claude-projects-template.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
